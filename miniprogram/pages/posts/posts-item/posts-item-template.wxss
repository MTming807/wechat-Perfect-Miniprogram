.post-container{
  /* 弹性盒子 */
  display: flex;
  /* 纵向布局 */
  flex-direction: column;
  /* 上边距 */
  margin-top: 20rpx;
  /* 下边距 */
  margin-bottom: 40rpx;
  /* 背景色 */
  background-color: #fff;
  /* 上边线 */
  border-top: 1px solid #ededed;
  /* 下边线 */
  border-bottom: 1px solid #ededed;
  /* 内边距 */
  padding-bottom: 10rpx;
}

.post-author-data{
  /* 上右下左边距顺序 */
  margin: 10rpx 0 20rpx 10rpx;
  /* 推荐使用弹性盒子垂直居中 */
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author{
  height: 60rpx;
  width: 60rpx;
  /* 垂直居中 */
  /* vertical-align: middle; */
}

.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 10px;
  margin-left: 10px;
  color: #333;
}

.post-image{
  width: 100%;
  height:340rpx;
  margin-bottom:15px;
}

.post-content{
  font-size: 28rpx;
  color: #666;
  /* 字间距 */
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like-image{
  width:32rpx;
  height:32rpx;
  margin-bottom:10rpx;
  margin-right: 12rpx;
}
.post-like-font{
  margin-right: 40rpx;
  margin-bottom:5rpx;
}

.post-image-s{
  width: 100%;
  height: 870rpx;
  margin-bottom:15px;
}