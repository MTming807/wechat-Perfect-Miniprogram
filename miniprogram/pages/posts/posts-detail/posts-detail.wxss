/* pages/posts/posts-detail/posts-detail.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width: 100%;
  height: 460rpx;
}

.author-date{
  flex-direction:row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.avator{
  height: 64rpx;
  width: 64rpx;
  /* 居中对齐 */
  vertical-align: middle;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.time{
  font-size: 24rpx;
  color: #666;
  margin-left: 10rpx;
}

.title{
  font-size: 36rpx;
  font-weight: 700;
  margin-left: 40rpx;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool{
  margin-top: 20rpx;
}

.icon{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.collectionicon{
  margin-left: 40rpx;
  width: 90rpx;
  height: 90rpx;
}

.shareicon{
  margin-left: 40rpx;
  width: 90rpx;
  height: 90rpx;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  /* 重叠图片 */
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail{
  
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  letter-spacing: 2px;
  color: #666;
  line-height: 44rpx;
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  /* 居中 */
  /* left: 50%;
  top: 180rpx; */
  margin-left:-51rpx;
  left: 90%;
  top: 380rpx;
  /* 透明度 */
  opacity:0.6;
}