@import "../movies/movie-detail/movie-detail.wxss";

.profile{
  background: #405f80;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}

.profile-img{
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 60rpx);
}

.profile-name{
  font-size: 36rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 270rpx);
}

.textview{
  overflow-wrap: break-word;
  margin: 20rpx 20rpx 20rpx 20rpx;
}