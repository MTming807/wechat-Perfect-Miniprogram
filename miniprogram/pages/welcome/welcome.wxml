<!-- wxml是用来编写页面骨架的文件 -->

<view class="container">
  <image class="user-avator" src="/images/1.jpg"></image>
  <text class="user-name">Hello !</text>

  <view class="moto-container">
  <!-- 用于捕捉事件的关键字catch和bind -->
  <!-- bind冒泡,点击子元素父元素会监听响应，catch会阻止事件向上冒泡 -->
    <button class="moto" bind:tap="onTap">点我</button>
  </view>
  <!-- 图片默认样式：width:300px height:225px -->
</view>
